<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saref.rss_reader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.saref.rss_reader.ChoseStartScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".news.NewsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".news.article.ArticleDetailsActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".channels.ChannelsActivity"
            android:label="@string/channelsActionBarTitle"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".channels.add.AddChannelActivity"
            android:label="@string/addChannelTitle"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".channels.SettingsActivity" />

        <service android:name=".news.parser.FeedParserService" />
        <service android:name=".channels.parser.CheckChannelService" />
        <service android:name=".news.LoadNewsFromDatabaseService" />
        <service android:name=".channels.LoadChannelsFromDatabaseService" />
        <service android:name=".database.DeleteChannelService" />
        <service android:name=".alarms.SetAlarmsService" />

        <receiver
            android:name=".alarms.AlarmReceiver"
            android:process=":remote" />

    </application>

</manifest>