<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saref.rss_reader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".news.NewsScreenActivity" />
        <activity android:name=".news.article.ArticleDetailsActivity" />
        <activity android:name=".channels.ChannelsScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".channels.add.AddChannelActivity"/>

        <service android:name=".news.parser.FeedParserService" />
        <service android:name=".channels.parser.CheckChannelService" />


    </application>

</manifest>